<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_school_session_form" model="ir.ui.view">
        <field name="name">view_school_session_form</field>
        <field name="model">school.session</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h3>
                            <field name="subject_id" placeholder="Select Subject"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="school_id"/>
                            <field name="teacher_id"/>
                        </group>
                        <group>
                            <field name="classroom_id"/>
                            <field name="year"/>
                        </group>
                    </group>
                    <group>
                        <label for="start_date" string="Session Date"/>
                        <div class="o_row">
                            <field name="start_date" widget="daterange" options='{"related_end_date": "end_date"}'/>
                            <i class="fa fa-long-arrow-right mx-1" aria-label="Arrow icon" title="Arrow"/>
                            <field name="end_date" widget="daterange" options='{"related_start_date": "start_date"}'/>
                        </div>
                    </group>
                    <group>
                        <group>
                            <field name="start_time" widget="float_time"/>
                        </group>
                        <group>
                            <field name="end_time" widget="float_time"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="students" string="Students">
                            <field name="student_ids">
                                <tree>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_school_session_tree" model="ir.ui.view">
        <field name="name">view_school_session_tree</field>
        <field name="model">school.session</field>
        <field name="arch" type="xml">
            <tree>
                <field name="subject_id"/>
                <field name="classroom_id"/>
                <field name="school_id"/>
                <field name="teacher_id"/>
                <field name="year"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
        </field>
    </record>

    <record id="action_school_sessions" model="ir.actions.act_window">
        <field name="name">School Sessions</field>
        <field name="res_model">school.session</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a session for any subject and classroom and register students to the session.
            </p>
        </field>
    </record>

    <menuitem id="menu_sessions"
              parent="menu_gems_root"
              name="Sessions"
              action="action_school_sessions"/>
</odoo>
