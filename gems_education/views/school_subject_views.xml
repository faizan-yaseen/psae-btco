<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_school_subject_form" model="ir.ui.view">
        <field name="name">view_school_subject_form</field>
        <field name="model">school.subject</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h3>
                            <field name="name" placeholder="Subject Name"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="school_id"/>
                        </group>
                        <group>
                            <field name="book"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_school_subject_tree" model="ir.ui.view">
        <field name="name">view_school_subject_tree</field>
        <field name="model">school.subject</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="book"/>
                <field name="school_id"/>
            </tree>
        </field>
    </record>

    <record id="action_school_subjects" model="ir.actions.act_window">
        <field name="name">School Subjects</field>
        <field name="res_model">school.subject</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a subject for any school.
            </p>
        </field>
    </record>

    <menuitem id="menu_subjects"
              parent="menu_gems_root"
              name="Subjects"
              action="action_school_subjects"/>
</odoo>
